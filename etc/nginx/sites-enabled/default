server {
    listen 80 default_server;
    server_name _;

    root /usr/share;

    location / {
        return 404;
        #return 301 /phppgadmin;
    }

    location /phppgadmin {
        index index.php;
    }

    location ~ /\. {
        return 403;
    }

    location ~ \.php$ {
        try_files $uri =404;
        include fastcgi_php;
    }
}
